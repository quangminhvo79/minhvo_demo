<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>

  <body>
    <%= turbo_stream_from current_user, :videos %>
    <%= turbo_stream_from current_user, :reactions %>
    <%= turbo_stream_from :update_reaction %>

    <div id="notifications"></div>
    <main class="container mx-auto">
      <div class="navbar bg-base-100">
        <div class="flex-1">
          <%= link_to root_path, class: 'font-semibold cursor-pointer normal-case text-xl ml-5' do %>
            Youtube Sharing Video
          <% end %>
        </div>
        <div class="flex-none gap-2">
          <%= render 'layouts/user_actions' %>
        </div>
      </div>
      <%= yield %>
      <div id="modal" class="modal"></div>
    </main>
  </body>
</html>
