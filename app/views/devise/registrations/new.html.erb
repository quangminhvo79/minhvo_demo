<div>
  <%= link_to root_path do %>
    <div class="text-center w-auto text-9xl">🎥</div>
  <% end %>
  <h2 class="mt-6 text-center text-3xl font-bold tracking-tight">Register</h2>
</div>
<%= render "devise/shared/error_messages", resource: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.label :email, class: 'mb-1 block' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input border-gray-300 bg-gray-100 w-full", placeholder: 'Email' %>
    </div>

    <div>
      <%= f.label :password, class: 'block' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input border-gray-300 bg-gray-100 w-full", placeholder: 'Password' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'mb-1 block' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input border-gray-300 bg-gray-100 w-full", placeholder: 'Password Confirmation' %>
    </div>

    <div class="actions space-y-4">
      <%= f.submit "Sign up", class: "group btn btn-primary w-full" %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
