<div class="px-5 my-5">
  <div id="video_<%= @video.id %>" class="group relative flex flex-col overflow-hidden rounded-lg border border-gray-200 bg-white shadow-lg">
    <div class="aspect-w-4 aspect-h-2 bg-gray-200 group-hover:opacity-75 sm:aspect-none sm:h-46">
      <%= link_to "https://youtu.be/#{@video.youtube_video_id}", target: '_blank' do %>
        <img src="<%= @video.thumbnails.with_indifferent_access[:high][:url] %>" alt="" class="h-full w-full object-cover object-center sm:h-full sm:w-full">
      <% end %>
    </div>
    <div class="flex flex-1 flex-col space-y-2 p-4">
      <h2 class="text-base font-bold text-gray-900">
        <%= @video.channel_name %>
      </h2>
      <%= link_to "https://youtu.be/#{@video.youtube_video_id}", target: '_blank' do %>
        <h3 class="text-sm font-medium text-gray-900">
          <%= @video.title %>
        </h3>
      <% end %>
      <h3>Shared by: <%= @video.creator.email %></h3>

      <div class="feedback flex items-center gap-3">
        <div id='<%= "#{@video.query_selector}_like" %>'>
          <%= render LikeComponent.new(video: @video) %>
        </div>

        <div id='<%= "#{@video.query_selector}_dislike" %>'>
          <%= render DislikeComponent.new(video: @video) %>
        </div>
      </div>

      <p class="text-sm text-gray-800"><%= @video.description.to_s[0..200] %>...</p>
    </div>
  </div>
</div>
