<%= turbo_stream.update 'modal' do %>
  <div class="modal-box relative" data-controller="modal">
    <label for="my-modal-3" class="btn btn-sm btn-circle absolute right-2 top-2 modal-close">âœ•</label>
    <h3 class="text-lg font-bold mb-4">Share a Youtube Video</h3>

    <%= simple_form_for Video.new, url: videos_path, method: :post, remote: true do |f| %>
      <div class="space-y-3">
        <%= f.input :youtube_url, input_html: { class: 'input w-full border border-zinc-300', type: :text }, placeholder: 'Youtube Link', label: false, wrapper_html: { class: 'px-0' } %>
        <%= f.error :youtube_video_id, id: 'youtube_video_id' %>
        <%= f.submit 'Share', class: 'btn btn-primary w-full', data: { disable_with: true } %>
      </div>
    <% end %>
  </div>
<% end %>
